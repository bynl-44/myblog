<% include header %>
  <div class="text-center">
    <form class="form-signin" _lpchecked="1" action="/user/signup" method="post">
      <h1 class="h3 mb-3 font-weight-normal">请注册</h1>
      <div class="form-label-group">
        <input id="signin-name" class="form-control" placeholder="用户名" type="text" name="name">
        <label for="signin-name" class="sr-only">用户名</label>
      </div>
      <div class="form-label-group">
        <input id="signin-password" class="form-control" placeholder="密码" type="password" name="password">
        <label for="signin-password" class="sr-only">密码</label>
      </div>
      <div class="form-label-group">
        <input id="signin-password-repeat" class="form-control" placeholder="确认密码" type="password" name="passwordRepeat">
        <label for="signin-password-repeat" class="sr-only">确认密码</label>
      </div>
      <button type="submit" class="btn btn-lg btn-primary btn-block">注册</button>
    </form>
  </div>
  <% include footer %>